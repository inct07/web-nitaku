<h1>Users</h1>

<ul>
  <% @users.each do |user| %>
  <li>
    <%= link_to user.name, user_path(user.id) %>
    <%= link_to "[Edit]", edit_user_path(user.id) %>
    <%= link_to "[Delete]", user_path(user.id), method: :delete, data: {confirm: "Are you sure?"} %>
  </li>
  <% end %>
</ul>

<%= link_to "Create New User", new_user_path %><br>
